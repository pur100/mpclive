.article__title {
  text-align: left;
}

.action_button {
 background-color:  #303546!important;
 color: #FFFFFF!important;
}

.blog-title, .subtitle {
  text-align: center !important;
  float: none !important;
}

.subtotal {
  p {
    text-align: left;
  }
}

.featured-link--half .button {
    height: auto;
    background-color: #303546!important;
    color: #FFFFFF!important;
    border: 1px solid #303546;
    transition: none;
    line-height: 1.5;
    padding-top: 10px;
    padding-bottom: 10px;
}

#blog_filter {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.is_selected {
  background-color: #303546;
  a {
    color: white !important;
  }
}

.tag_blog {
  border: 1px solid #303546;
  border-radius: 5px;
  color: #303546;
  padding: 1px 6px;

  &:hover {
    transition-duration: 0.6s;
    background-color: #303546;
    a {
      color: white !important;
    }

  }
}
