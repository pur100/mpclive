/* Products In Set */
#products-in-set-section-link span {
  color:#fff;
}
.products-in-set-section {
  .columns {
    h2 {
      margin-bottom:40px;
    }
    > div {
      margin-bottom:50px;
      .product_section {
        display:flex;

        .image-section {
          flex:0 0 0;
          .gallery-wrap {
            width:240px;
            .image__container {
              width:240px;
            }
          }
        }
        .details-section {
          flex:1 0 0;
          padding-left: 30px;
          .product-title {
            padding-top:0;
          }
          .product_form {
            max-width:none;
            form {
              display:flex;
              align-items: flex-end;
              .swatch_options {
                flex:1 0 0;
                margin:0;
                .size_chart {
                  float:none;
                  display:block;
                }
              }
              .purchase-details {
                flex:1 0 0;
                align-items: flex-end;
                padding:0;
                padding-left: 30px;
                & > div {
                  width:auto;
                  flex:1 0 0;
                  margin: 0;
                  button {
                    width: auto;
                    flex: 1;
                    max-width: none;
                  }
                }
                .price {
                  flex: 1 1 100%;
                  .modal_price {
                    justify-content:flex-end;
                    padding-bottom:0;
                  }
                }
                .purchase-details__quantity {
                  padding-right:10px;
                }
              }
            }
          }
        }
      }
    }
  }
}
@media only screen and (max-width:768px) {
  .action_button {
    font-size: 12px !important;
  }

  .products-in-set-section {
    .columns {
      > div {
        .product_section {
          .details-section {
            .product_form {
              form {
                flex-wrap: wrap;
                .swatch_options {
                  flex: 1 0 100%;
                  margin-bottom:15px;
                }
                .purchase-details {
                  flex: 1 0 100%;
                  padding-left:0;
                  .price {
                    flex:1 0 0;
                    margin-bottom: 15px;
                    .modal_price {
                      justify-content:left;
                    }
                  }
                  .purchase-details__quantity {
                    padding-right:0;
                    margin-bottom: 15px;
                  }
                  .purchase-details__buttons {
                    flex:1 0 100%;
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
